<div class="container">

  <div class= "select">
    <h1>Notre sélection</h1>
    <p>Nous vous avons sélectionné 3 repas qui vous conviendraient :</p>
  </div>


    <% @meals.each do |meal| %>
    <%=link_to meal_path(meal) do%>
      <div class="cards-taste">
      <div class="cards">
        <div class="cards-content">
          <div class="card-text">
            <p class="p-bold"><%= meal.title %></p>
            <p class="p-normal"><%= meal.description %></p>
            </div>
            <div class="card-infos">
              <p class="p-bold">📅 <%= meal.date %></p>
              <p class="p-bold">💸<%= meal.price_per_person %>€</p>
              <p class="p-bold">🧍‍♂️<%= meal.maximum_guests %></p>
            </div>
        </div>
        <div class="cards-img">
        <div class="tag tag-city">
          <%= meal.location %>
        </div>
        <%= image_tag "japon.png", alt: "logo-taste_explorers", width: 110, class:"card-img" %>
        </div>
      </div>
      </div>
      <% end %>
    <% end %>

  <div class="more-meals">
    <%= link_to "Voir plus de repas", meals_path, class: "btn" %>
  </div>

</div>
