<div class="index-meals">
  <h1>Tous nos meals</h1>
  <div class="input d-flex align-items-center justify-content-between">
        <div>Rechercher un repas</div>
        <i class="fa-solid fa-magnifying-glass"></i>
  </div>
  <div class="cards-taste">
    <% @meals.each do |meal| %>
    <%= link_to meal_path(meal) do%>
    <div class="cards">
      <div class="cards-content">
        <div class="card-text">
          <p class="p-bold"><%=meal.title%></p>
          <p class="p-normal"><%= meal.description %></p>
          </div>
          <div class="card-infos">
            <p class="p-bold">📅<%= meal.date %></p>
            <p class="p-bold">💸<%= meal.price_per_person %></p>
            <p class="p-bold">🧍‍♂️<%= meal.maximum_guests %></p>
          </div>
      </div>
      <div class="cards-img">
      <div class="tag tag-city">
        <!-- Ville supprimée -->
      </div>
      <% if meal.photo.attached? %>
        <%= cl_image_tag meal.photo.key, alt: "logo-taste_explorers", width: 110, class:"card-img" %>
      <% else %>
        <%= image_tag 'japon.png', alt: 'Pas d\'image disponible', width: 110, class:"card-img" %>
      <% end %>
      </div>
    </div>
      <% end %>
    <% end %>
    </div>
</div>
