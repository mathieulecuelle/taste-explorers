<div class="index-meals">
  <h1>Tous nos meals</h1>
  <div class="input d-flex align-items-center justify-content-between">
        <div>Rechercher un repas</div>
        <i class="fa-solid fa-magnifying-glass"></i>
  </div>
  <div class="cards-taste">
    <% @meals.each do |meal| %>
    <div class="cards">
      <%= link_to meal_path(meal) do%>
      <div class="cards-content">
        <div class="card-text">
          <p class="p-bold"><%= link_to meal.title, meal_path(meal) %></p>
          <p class="p-normal"><%= meal.description %></p>
          </div>
          <div class="card-infos">
            <p class="p-bold">📅 29 juillet</p>
            <p class="p-bold">💸39€</p>
            <p class="p-bold">🧍‍♂️4</p>
          </div>
      </div>
      <div class="cards-img">
      <div class="tag tag-city">
        Nantes
      </div>
      <%= image_tag "japon.png", alt: "logo-taste_explorers", width: 110, class:"card-img" %>
      </div>
      <%end%>
    </div>
    <% end %>
    </div>
</div>
