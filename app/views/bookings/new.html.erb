<div class="page-facture">
  <div class="header-ariane">
    <i class="fa-solid fa-arrow-right fa-rotate-180 return"></i>
    <p class="p-light">Confirmation</p>
  </div>
  <div class="banner-confirmation no-border">
    <h2 class="text-width">Vous êtes sur le point de réserver votre place, <%= current_user.first_name %></h2>
  </div>
  <div class="facturation-confirmation">
    <h3>Récapitulatif</h3>
    <div class="facturation-texts">
      <div class="info-facture">
      <p class="p-bold">📅 <%= @booking.meal.date %></p>
      <p class="p-bold">📍 <%= @booking.meal.location %></p>
      </div>
    </div>
    <div class="factures">
      <h3>Facture</h3>
      <div class="text-facture">
        <p class="p-facture">Prix</p>
        <p class="p-facture"><%= @booking.meal.price_per_person %>€</p>
      </div>
      <div class="text-facture">
        <p class="p-facture">Frais de service</p>
        <p class="p-facture">25€</p>
      </div>
      <div class="line"></div>
      <div class="text-facture">
        <p class="p-facture">Total</p>
        <p class="p-facture"><%= @booking.meal.price_per_person + 25 %>€</p>
      </div>
    </div>
  </div>
  <div class="button-facture">
  <%= simple_form_for [@meal, @booking], url: meal_bookings_path do |form| %>
    <%= form.submit "Confirmer ma venue", class:"button btn-one"%>
  <% end %>
  </div>
</div>
