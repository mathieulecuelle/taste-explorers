
 <div class="header-ariane">
  </div>
    <div class="banner-confirmation no-border" style="text-align: center;">
    <h2>Editez votre profil <%= User.find(current_user.id).first_name %></h2>
</div>
<br><br>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
   <div class="form-group row align-items-center">
  <div class="col-auto">
    <i class="fas fa-envelope"></i>
  </div>
  <div class="col">
     <%= f.input :email, required: true, label: false, placeholder:"E-mail"%>
  </div>
</div>
<br>
<div class="form-group row align-items-center">
  <div class="col-auto">
    <i class="fas fa-user"></i>
  </div>
  <div class="col">
    <%= f.input :first_name, required: true, label: false, placeholder:"Prénom"%>
  </div>
</div>
<br>
<div class="form-group row align-items-center">
  <div class="col-auto">
    <i class="fas fa-user"></i>
  </div>
  <div class="col">
    <%= f.input :last_name, required: true, label: false, placeholder:"Nom"%>
  </div>
</div>
<br>
<div class="form-group row align-items-center">
  <div class="col-auto">
    <i class="fas fa-lock"></i>
  </div>
  <div class="col">
    <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control', placeholder:"Mot de passe actuel" %>
    <small class="form-text text-muted">Veuillez entrer votre mot de passe actuel pour confirmer la modification.</small>
  </div>
</div>
<br>
<div class="form-group row align-items-center">
  <div class="col-auto">
    <i class="fas fa-lock"></i>
  </div>
  <div class="col">
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder:"Nouveau mot de passe"%>
    <small class="form-text text-muted">Laissez vide si vous ne souhaitez pas modifier votre mot de passe.</small>
  </div>
</div>
<br>
<div class="form-group row align-items-center">
  <div class="col-auto">
    <i class="fas fa-lock"></i>
  </div>
  <div class="col">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder:"Confirmation du nouveau mot de passe" %>
  </div>
</div>
<br>
<div class="form-group row align-items-center">
  <div class="col-auto">
    <i class="fas fa-camera"></i>
  </div>
  <div class="col">
    <%= f.input :photo, as: :file, label: false, input_html: { class: "form-control" } %>
  </div>
</div>
   <div class="form-actions text-center" style="margin-top: 20px;">
      <%= f.button :submit, "Mettre à jour", class: "button btn-one" %>
    </div>
<% end %>
<br><br>
<div class="delete-account-section text-center">
  <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Êtes-vous sûr de vouloir supprimer votre compte ?", turbo_confirm: "Êtes-vous sûr ?" }, method: :delete, class: "btn-delete" %>
</div>
