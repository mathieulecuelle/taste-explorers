<div class="banner no-border">
    <div class="banner-photo">
    <%= image_tag 'poster-repas.webp', alt: "Photo", class: "img-banner" %>
    <div class="banner-text">
      <h2 class="h2-banner text-center">inscription</h2>
    </div>
  </div>
</div>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="d-flex justify-content-center">
    <div class="col-md-6 col-lg-4">
      <!-- Formulaire -->
      <div class="card p-4 shadow-sm">
        <%= f.error_notification %>

        <div class="form-inputs">
          <h3>Informations du profil</h3>

          <!-- Nom avec icône -->
          <div class="form-group mb-3">
            <div class="input-group">
              <div class="input-group-text">
                <i class="fas fa-user"></i>
              </div>
              <%= f.input :first_name, required: true, label: false, input_html: { class: "form-control", placeholder: "Nom" } %>
            </div>
          </div>

          <!-- Prénom avec icône -->
          <div class="form-group mb-3">
            <div class="input-group">
              <div class="input-group-text">
                <i class="fas fa-user"></i>
              </div>
              <%= f.input :last_name, required: true, label: false, input_html: { class: "form-control", placeholder: "Prénom" } %>
            </div>
          </div>

          <!-- Email avec icône -->
          <div class="form-group mb-3">
            <div class="input-group">
              <div class="input-group-text">
                <i class="fas fa-envelope"></i>
              </div>
              <%= f.input :email,
                          required: true,
                          autofocus: true,
                          label: false,
                          input_html: { class: "form-control", autocomplete: "email", placeholder: "Email" } %>
            </div>
          </div>

          <!-- Mot de passe avec icône -->
          <div class="form-group mb-3">
            <div class="input-group">
              <div class="input-group-text">
                <i class="fas fa-lock"></i>
              </div>
              <%= f.input :password,
                          required: true,
                          label: false,
                          input_html: { class: "form-control", autocomplete: "new-password", placeholder: "Mot de passe" } %>
            </div>
          </div>

          <!-- Confirmation mot de passe avec icône -->
          <div class="form-group mb-3">
            <div class="input-group">
              <div class="input-group-text">
                <i class="fas fa-lock"></i>
              </div>
              <%= f.input :password_confirmation,
                          required: true,
                          label: false,
                          input_html: { class: "form-control", autocomplete: "new-password", placeholder: "Confirmation du mot de passe" } %>
            </div>
          </div>

          <!-- Photo de profil avec icône -->
          <div class="form-group mb-3">
            <div class="input-group">
              <div class="input-group-text">
                <i class="fas fa-camera"></i>
              </div>
              <%= f.input :photo, as: :file, label: false, input_html: { class: "form-control" } %>
            </div>
          </div>

        </div>

        <!-- Bouton de soumission -->
        <div class="form-actions text-center">
          <%= f.button :submit, "S'inscrire", class: "btn btn-primary btn-block" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
