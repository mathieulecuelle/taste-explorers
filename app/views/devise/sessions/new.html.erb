 <div class="header-ariane">
  </div>
  <div class="banner-confirmation no-border" style="text-align: center;">
<h2 class="text-center mb-4">Log in</h2>
</div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="d-flex justify-content-center">
    <div class="col-md-6 col-lg-4">
      <!-- Formulaire -->
      <div class="card p-4 shadow-sm">
        <%= f.error_notification %>

        <div class="form-inputs">
          <!-- Email avec icône à gauche -->
          <div class="form-group mb-3">
            <div class="input-group">
              <div class="input-group-text">
                <i class="fas fa-envelope"></i>
              </div>
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { class: "form-control", autocomplete: "email", placeholder: "Email" } %>
            </div>
          </div>

          <!-- Mot de passe avec icône à gauche -->
          <div class="form-group mb-3">
            <div class="input-group">
              <div class="input-group-text">
                <i class="fas fa-lock"></i>
              </div>
              <%= f.input :password,
                          required: false,
                          input_html: { class: "form-control", autocomplete: "current-password", placeholder: "Mot de passe" } %>
            </div>
          </div>

          <!-- Se souvenir de moi avec icône à gauche -->
          <% if devise_mapping.rememberable? %>
            <div class="form-group mb-3">
              <%= f.input :remember_me, as: :boolean, label: "Se souvenir de moi", input_html: { class: "form-check-input" } %>
            </div>
          <% end %>

        </div>

        <!-- Bouton de soumission -->
        <div class="form-actions text-center">
          <%= f.button :submit, "Log in", class: "btn btn-primary btn-block" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<!-- Liens de Devise (inscription, mot de passe oublié, etc.) -->
<div class="text-center" style="margin-top: 20px;">
<%= render "devise/shared/links" %>
</div>
