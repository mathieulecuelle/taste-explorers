<div class="container">
  <div class="content-home">
    <div class="d-flex justify-content-center">
      <%= image_tag "Logo.png", alt: "logo-taste_explorers", width: 200 %>
    </div>
    <div class="form-home" style="width: 308px; margin:auto;">

      <div data-controller="datepicker" >
        <%= simple_form_for :search, url: proposals_meals_path, method: :get do |f| %>
          <div class="form-group">
            <%= f.input :address,
              input_html: { data: { address_autocomplete_target: "address" }, class: "d-none" },
              wrapper_html: { data: { controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"] } },
              label: "OÃ¹ habitez-vous ?",
              placeholder: "Entrez une adresse" %>
          </div>
          <div class="form-group">
            <%= text_field_tag :date_range, nil,
              data: {
                datepicker_target: "dateRange"
              },
              placeholder: "Chosissez vos disponibilitÃ©s",
              class: "form-control",
              readonly: true %>
            <%= f.input :start_date, as: :hidden, input_html: { data: { datepicker_target: "startDate" } } %>
            <%= f.input :end_date, as: :hidden, input_html: { data: { datepicker_target: "endDate" } } %>
          </div>
          <div class="form-group">
            <div class="d-flex justify-content-center">
            <%= f.submit "Rechercher", class: "button btn-one" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <%= link_to proposals_meals_path do %>
      <!--<div class="button btn-one">Valider</div>-->
    <% end %>
  </div>
</div>
